<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="card" style="width: 18rem;">
            <a href="/courses/{{this.slug}}">
                <img src="{{this.image}}" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.discription}}</p>
                <a href="#" class="btn btn-primary">Mua khoa hoc</a>
            </div>
        </div>
        {{/each}}

    </div>
</div>